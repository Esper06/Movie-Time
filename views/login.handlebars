{{!-- to show alerts --}}
<div id="alertMessage" class=" m-2"></div>


<div class="row my-5 ">
  
  <div class="col-md-6 m-auto">
    <div class="card card-body  bg-dark">
      <h1 class="text-center mb-3 text-yellow-200"><i class="fas fa-street-view text-red-900"></i> Login</h1>

<form class="login-form">
  <div class="mb-3">
    <label for="Email" class="form-label text-info" ><i class="fas fa-at"></i> Email address</label>
    <input type="email" class="form-control  font-weight-bold text-light bg-dark" id="email-login" placeholder="User Email">
    <div class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label text-info"><i class="fas fa-key"></i> Password</label>
    <input type="password" class="form-control text-light bg-dark" id="password-login" placeholder="User Password">
  </div>
  <button type="submit" class="btn btn-light w-100"> <i class="fas fa-sign-in-alt "></i> Login</button>

</form>


      <p class="lead mt-4 text-warning">
        Don't have an account? <a class="btn bg-green-300 w-100" href="/register"> <i class="fas fa-user-plus"> Register</i> </a>
      </p>
    </div>
  </div>
</div>